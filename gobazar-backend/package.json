{
  "name": "gobazar-backend",
  "version": "1.0.0",
  "description": "Backend API for GoBazar e-commerce platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register --transpile-only src/server.ts\"",
    "dev-simple": "node server-simple.js",
    "build": "npx prisma generate && tsc && tsc-alias",
    "start": "npx prisma db push --skip-generate && node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "add-subcategories": "ts-node -r tsconfig-paths/register scripts/add-subcategories.ts",
    "setup": "node scripts/setup.js",
    "start-db": "node scripts/start-db.js",
    "reset-db": "prisma migrate reset --force && npm run seed"
  },
  "_moduleAliases": {
    "@": "dist",
    "@/controllers": "dist/controllers",
    "@/middleware": "dist/middleware",
    "@/routes": "dist/routes",
    "@/services": "dist/services",
    "@/utils": "dist/utils",
    "@/config": "dist/config",
    "@/types": "dist/types"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "prisma"
  ],
  "author": "GoBazar Team",
  "license": "MIT",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.24",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "5.22.0",
    "resend": "^6.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "csv-parser": "^3.2.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}